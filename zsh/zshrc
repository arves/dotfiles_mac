# Set personal aliases, overriding those provided by Oh My Zsh libs,
# plugins, and themes. Aliases can be placed here, though Oh My Zsh
# users are encouraged to define aliases within a top-level file in
# the $ZSH_CUSTOM folder, with .zsh extension. Examples:
# - $ZSH_CUSTOM/aliases.zsh
# - $ZSH_CUSTOM/macos.zsh
# For a full list of active aliases, run `alias`.
#
# Example aliases
# alias zshconfig="mate ~/.zshrc"
# alias ohmyzsh="mate ~/.oh-my-zsh"

# Aliased
alias ls="eza -l --all --icons -G --color"
alias less="bat"
alias vim="nvim"

# customer portal stuff
alias all="pnpm -r"
alias frontend="pnpm -r --filter frontend"
alias cypress="pnpm -r --filter functional-tests"
alias stats="pnpm -r --filter stats"
alias legacy="pnpm -r --filter legacy"

export FZF_CTRL_T_OPTS="--preview 'bat -n --color=always --line-range :500 {}'"
export FZF_ALT_C_OPTS="--preview 'eza --tree --color=always {} | head -200'"

export FZF_DEFAULT_OPTS=" \
--color=spinner:#f5e0dc,hl:#f38ba8 \
--color=fg:#cdd6f4,header:#b4befe,info:#cba6f7,pointer:#a6e3a1 \
--color=bg+:#1e1e2e \
--color=marker:#b4befe,fg+:#a6e3a1,prompt:#cba6f7,hl+:#f38ba8 \
--color=border:#1e1e2e \
--multi"

